<Window x:Name="GameWindow" x:Class="SpaceInvaders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceInvaders"
        xmlns:converters="clr-namespace:SpaceInvaders.converters"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:MainWindowViewModel}"
        Title="Space Invaders" Height="800" Width="1200" ResizeMode="NoResize" KeyDown="OnKeyDown">
    <Window.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </Window.Resources>
    <Grid x:Name="BlankGrid" Background="#000000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding XOffset}" />
            <ColumnDefinition Width="{Binding PlayboardWidth}" />
            <ColumnDefinition Width="{Binding XOffset}" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:Name="DisplayGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#000000" Grid.Row="0" Grid.ColumnSpan="3">
            <StackPanel x:Name="DisplayStackPanel" Background="#000000" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="4">
                <TextBox x:Name="ScoreText" Foreground="#FF5FFFB3" BorderBrush="#FF5FFFB3" IsReadOnly="True" HorizontalAlignment="Left" Height="300" TextWrapping="Wrap" Text="SCORE:" VerticalAlignment="Top" Width="296" FontSize="48" FontFamily="Levenim MT" Background="Black"/>
                <TextBox x:Name="Score" Foreground="#FF5FFFB3" BorderBrush="#FF5FFFB3" IsReadOnly="True" TextWrapping="Wrap" Text="0" Width="285" Background="#000000" FontSize="48" FontFamily="Levenim MT" Margin="0,0,0,15.2" Height="75"/>
                <TextBox x:Name="LivesText" Foreground="#FF5FFFB3" BorderBrush="#FF5FFFB3" IsReadOnly="True" HorizontalAlignment="Left" Height="300" TextWrapping="Wrap" Text="LIVES: " VerticalAlignment="Top" Width="322" FontSize="48" FontFamily="Levenim MT" Background="Black"/>
                <TextBox x:Name="Lives" Foreground="#FF5FFFB3" BorderBrush="#FF5FFFB3" IsReadOnly="True" TextWrapping="Wrap" Text="♥ ♥ ♥ " Width="295" Background="#000000" FontSize="48" FontFamily="Levenim MT" Margin="0,0,0,15.2" Height="75"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="LeftGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Row="1" Column="0" Background="#000000">
            <StackPanel x:Name="ButtonsStackPanel" HorizontalAlignment="Left" VerticalAlignment="Top" Height="697" Background="#000000">
                <Button x:Name="NewGame" Foreground="#FF5FFFB3" Focusable="False" IsEnabled="{Binding IsPaused, Converter={StaticResource InverseBooleanConverter}}" Content="NEW GAME" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="60" FontFamily="Levenim MT" FontSize="22" Background="Black" BorderBrush="#FF5FFFB3" Click="NewGameButton"/>
                <Button x:Name="Pause" Foreground="#FF5FFFB3" Focusable="False" Content="❚❚ ►" Command="{Binding ClickCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="60" FontSize="22" Background="Black" BorderBrush="#FF5FFFB3" FontFamily="Arial"/>
                <Button x:Name="Exit" Foreground="#FF5FFFB3" Focusable="False" Content="EXIT" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="60" FontSize="22" Background="Black" BorderBrush="#FF5FFFB3" Click="ExitButton" FontFamily="Levenim MT"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="RightGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Row="1" Column="2" Background="#000000">
            <StackPanel x:Name="InfoStackPanel" HorizontalAlignment="Left" VerticalAlignment="Top" Height="697">
                <TextBox x:Name="Wave" Foreground="#FF5FFFB3" BorderBrush="#FF5FFFB3" IsReadOnly="True" HorizontalAlignment="Left" Height="60" TextWrapping="Wrap" Text="WAVE:" VerticalAlignment="Top" Width="200" FontSize="30" FontFamily="Levenim MT" Background="Black"/>
                <TextBox x:Name="WaveValue" Foreground="#FF5FFFB3" BorderBrush="#FF5FFFB3" IsReadOnly="True" HorizontalAlignment="Left" Height="60" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="200" FontSize="30" FontFamily="Levenim MT" Background="Black"/>
                <TextBox x:Name="Laser" Foreground="#FF5FFFB3" BorderBrush="#FF5FFFB3" IsReadOnly="True" HorizontalAlignment="Left" Height="60" TextWrapping="Wrap" Text="LASER:" VerticalAlignment="Top" Width="200" FontSize="30" FontFamily="Levenim MT" Background="Black"/>
                <TextBox x:Name="LaserValue" Foreground="#FF5FFFB3" BorderBrush="#FF5FFFB3" IsReadOnly="True" HorizontalAlignment="Left" Height="60" TextWrapping="Wrap" Text="∞" VerticalAlignment="Top" Width="200" FontSize="30" FontFamily="Levenim MT" Background="Black" AcceptsTab="True"/>
                <TextBox x:Name="Rockets" Foreground="#FF5FFFB3" BorderBrush="#FF5FFFB3" IsReadOnly="True" HorizontalAlignment="Left" Height="60" TextWrapping="Wrap" Text="ROCKETS:" VerticalAlignment="Top" Width="200" FontSize="30" FontFamily="Levenim MT" Background="Black"/>
                <TextBox x:Name="RocketsValue" Foreground="#FF5FFFB3" BorderBrush="#FF5FFFB3" IsReadOnly="True" HorizontalAlignment="Left" Height="60" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="200" FontSize="30" FontFamily="Levenim MT" Background="Black"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="FieldGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Row="1" Column="1">
            <Canvas x:Name="Playground" HorizontalAlignment="Left" Height="697" VerticalAlignment="Top" Width="794">
                <Canvas.Background>
                    <ImageBrush ImageSource="nebula.png" Stretch="UniformToFill"/>
                </Canvas.Background>
                <!--Raumschiff-->
                <Image x:Name="Player" IsEnabled="{Binding IsPaused, Converter={StaticResource InverseBooleanConverter}}" Height="100" Canvas.Left="{Binding Left}" Source="Spaceship-PNG-File.png" Stretch="Fill" Canvas.Top="581" Width="{Binding PlayerWidth}" />
            </Canvas>
        </Grid>

    </Grid>
</Window>
