<Window x:Class="SpaceInvaders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceInvaders"
        mc:Ignorable="d"
        Title="Board" Height="300" Width="300">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Gamefield/marble.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button x:Name="start" Content="Start" HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" Click="button_Click" Height="39" Margin="75,141,0,0"/>
        <Button x:Name="shop" Content="Shop" HorizontalAlignment="Left" VerticalAlignment="Top" Width="135"  Height="39" Margin="75,185,0,0" Click="shop_Click"/>

    </Grid>
</Window>