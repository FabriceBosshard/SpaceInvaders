<Window x:Name="GameWindow" x:Class="SpaceInvaders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceInvaders"
        xmlns:converters="clr-namespace:SpaceInvaders.converters"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:MainWindowViewModel}"
        Title="Space Invaders" Height="800" Width="1200" ResizeMode="NoResize" KeyDown="OnKeyDown">
    <Window.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </Window.Resources>
    <Grid x:Name="BlankGrid" Background="#000000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding XOffset}" />
            <ColumnDefinition Width="{Binding PlayboardWidth}" />
            <ColumnDefinition Width="{Binding XOffset}" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:Name="DisplayGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#000000" Grid.Row="0" Grid.ColumnSpan="3">
            <StackPanel x:Name="DisplayStackPanel" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="4">
                <TextBox x:Name="ScoreText" IsReadOnly="True" HorizontalAlignment="Left" Height="75" TextWrapping="Wrap" Text="SCORE:" VerticalAlignment="Top" Width="296" FontSize="48" FontFamily="Levenim MT" Background="#FF636363"/>
                <TextBox x:Name="Score" IsReadOnly="True" TextWrapping="Wrap" Text="{Binding score}" Width="285" Background="#000000" FontSize="48" FontFamily="Levenim MT" Margin="0,0,0,15.2" Height="75" Foreground="Red"/>
                <TextBox x:Name="LivesText" IsReadOnly="True" HorizontalAlignment="Left" Height="75" TextWrapping="Wrap" Text="LIVES: " VerticalAlignment="Top" Width="322" FontSize="48" FontFamily="Levenim MT" Background="#FF636363"/>
                <TextBox x:Name="Lives" IsReadOnly="True" TextWrapping="Wrap" Text="♥ ♥ ♥ " Width="295" Background="#000000" FontSize="48" FontFamily="Levenim MT" Margin="0,0,0,15.2" Height="75" Foreground="Red"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="LeftGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Row="1" Column="0" Background="#000000">
            <StackPanel x:Name="ButtonsStackPanel" HorizontalAlignment="Left" VerticalAlignment="Top" Height="697">
                <Button x:Name="NewGame"   Focusable="False" IsEnabled="{Binding IsPaused, Converter={StaticResource InverseBooleanConverter}}" Content="NEW GAME" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="60" FontFamily="Levenim MT" FontSize="22" Background="#FF636363" BorderBrush="#FF636363" Click="NewGameButton"/>
                <Button x:Name="Pause" Focusable="False" Content="❚❚ ►" Command="{Binding ClickCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="60" FontSize="22" Background="#FF636363" BorderBrush="#FF636363" FontFamily="Arial"/>
                <Button x:Name="Exit"  Focusable="False" Content="EXIT" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="60" FontSize="22" Background="#FF636363" BorderBrush="#FF636363" Click="ExitButton" FontFamily="Levenim MT"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="RightGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Row="1" Column="2" Background="#000000">
            <StackPanel x:Name="InfoStackPanel" HorizontalAlignment="Left" VerticalAlignment="Top" Height="697">
                <TextBox x:Name="Wave" IsReadOnly="True" HorizontalAlignment="Left" Height="60" TextWrapping="Wrap" Text="WAVE:" VerticalAlignment="Top" Width="200" FontSize="30" FontFamily="Levenim MT" Background="#FF636363"/>
                <TextBox x:Name="WaveValue" IsReadOnly="True" HorizontalAlignment="Left" Height="60" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="200" FontSize="30" FontFamily="Levenim MT" Background="#FF636363"/>
                <TextBox x:Name="Laser" IsReadOnly="True" HorizontalAlignment="Left" Height="60" TextWrapping="Wrap" Text="LASER:" VerticalAlignment="Top" Width="200" FontSize="30" FontFamily="Levenim MT" Background="#FF636363"/>
                <TextBox x:Name="LaserValue" IsReadOnly="True" HorizontalAlignment="Left" Height="60" TextWrapping="Wrap" Text="∞" VerticalAlignment="Top" Width="200" FontSize="30" FontFamily="Levenim MT" Background="#FF636363" AcceptsTab="True"/>
                <TextBox x:Name="Rockets" IsReadOnly="True" HorizontalAlignment="Left" Height="60" TextWrapping="Wrap" Text="ROCKETS:" VerticalAlignment="Top" Width="200" FontSize="30" FontFamily="Levenim MT" Background="#FF636363"/>
                <TextBox x:Name="RocketsValue" IsReadOnly="True" HorizontalAlignment="Left" Height="60" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="200" FontSize="30" FontFamily="Levenim MT" Background="#FF636363"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="FieldGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Row="1" Column="1">
            <Canvas x:Name="Playground" HorizontalAlignment="Left" Height="697" VerticalAlignment="Top" Width="794">
                <Canvas.Background>
                    <ImageBrush ImageSource="nebula.png" Stretch="UniformToFill"/>
                </Canvas.Background>
                <!--Raumschiff-->
                <Image x:Name="Player" IsEnabled="{Binding IsPaused, Converter={StaticResource InverseBooleanConverter}}" Height="100" Canvas.Left="{Binding Left}" Source="Spaceship-PNG-File.png" Stretch="Fill" Canvas.Top="581" Width="{Binding PlayerWidth}" />
            </Canvas>
        </Grid>

    </Grid>
</Window>
